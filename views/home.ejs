<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Library Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/496b9c5c00.js" crossorigin="anonymous"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: linear-gradient(to bottom, #2c3e50, #34495e);
            font-family: 'Inter', sans-serif;
            color: #fff;
        }

        #h1 {
            width: 90%;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            margin-bottom: 40px;
            margin-top: 10%;
            padding: 2.5rem;
            box-sizing: border-box;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative; /* Make sure the heading is a positioning context */
            overflow: hidden;  /* Clip the overflowing animation */
        }

        h1 {
            color: #fff;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8);
            font-size: 3rem;
            margin-top: -22px;
            letter-spacing: 0.05em;
            font-weight: 600;
            animation: fadeIn 2s ease, wave 3s infinite alternate; /* Added animation */
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes wave {
            from { transform: translateY(0); }
            to { transform: translateY(-10px); }
        }


        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px;
            width: 95%;
            max-width: 700px;
            margin-bottom: 60px;
        }

        .box {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-sizing: border-box;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(8px);
        }

        .box:hover {
            transform: translateY(-8px) scale(1.04);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
        }

        .box i {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            color: #ffc107;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        button {
            background: linear-gradient(to right, #ffc107, #e65100);
            border: none;
            padding: 0.9rem 2.2rem;
            border-radius: 8px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            color: #fff;
            width: 100%;
            max-width: 320px;
            box-sizing: border-box;
            font-weight: 600;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        button:hover {
            background: linear-gradient(to right, #ffd54f, #d84315);
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        button:active {
            transform: translateY(0);
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }

        /* Media query for screens larger than 768px (medium screens) */
        @media (min-width: 769px) {
            .container {
                flex-direction: row;
                justify-content: center;
                align-items: stretch;
                max-width: 1200px;
            }
            .box {
                width: 320px;
                height: auto;
            }
            h1 {
                font-size: 4rem;
            }
            #h1 {
                width: 80%;
                padding: 2.7rem;
            }
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
            }
            #h1 {
                width: 95%;
                padding: 2rem;
            }
            .box {
                padding: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            h1 {
                font-size: 2rem;
            }
            .otp-input-box {
                width: 100%;
            }
            #h1 {
                width: 95%;
                padding: 1.5rem;
            }
            .box {
                padding: 1.2rem;
            }
            .container {
                gap: 1.5rem;
            }
        }

        /* Random Quote Styles */
        #quote-container {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 2rem;
            margin-top: 60px;
            text-align: center;
            color: #eee;
            font-size: 1.2rem;
            width: 90%;
            max-width: 800px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(8px);
            font-style: italic;
        }

        #quote-container p {
            margin-bottom: 1rem;
            font-style: italic;
        }

        #quote-container p::before,
        #quote-container p::after {
            content: open-quote;
            font-size: 1.5rem;
            margin: 0 0.5rem;
            font-family: "serif";
        }
        #quote-container p::after{
            content: close-quote;
        }

        #quote-author {
            font-size: 1rem;
            color: #ddd;
            font-weight: bold;
            margin-top: 1rem;
            text-align: right;
        }

        @media (max-width: 768px) {
            #quote-container {
                padding: 1.5rem;
                font-size: 1.1rem;
            }
        }

        @media (max-width: 576px) {
            #quote-container {
                padding: 1.2rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div id="h1">
        <h1>BookVerse</h1>
    </div>
    <div class="container">
        <div class="box">
            <i class="fa-solid fa-user"></i>
            <button onclick="window.location.href='/user/register'">User</button>
        </div>
        <div class="box">
            <i class="fa-solid fa-user-tie"></i>
            <button onclick="window.location.href='/admin/adminLogin'">Admin</button>
        </div>
    </div>
    <div id="quote-container">
        <p id="quote">Loading...</p>
        <p id="quote-author"></p>
    </div>

    <script>
        const quotes = [
            {
                quote: "The only way to do great work is to love what you do.",
                author: "Steve Jobs"
            },
            {
                quote: "The best way to predict the future is to invent it.",
                author: "Alan Kay"
            },
            {
                quote: "The future belongs to those who believe in the beauty of their dreams.",
                author: "Eleanor Roosevelt"
            },
             {
                quote: "It always seems impossible until it's done.",
                author: "Nelson Mandela"
            },
            {
                quote: "The mind is everything. What you think you become.",
                author: "Buddha"
            },
            {
                quote: "Strive not to be a success, but rather to be of value.",
                author: "Albert Einstein"
            },
            {
                quote: "The only limit to our realization of tomorrow will be our doubts of today.",
                author: "Franklin D. Roosevelt"
            },
            {
                quote: "The best and most beautiful things in the world cannot be seen or even touched - they must be felt with the heart.",
                author: "Helen Keller"
            },
            {
                quote: "Life is not about finding yourself. Life is about creating yourself.",
                author: "George Bernard Shaw"
            },
            {
                quote: "Whatever you can do, or dream you can, begin it. Boldness has genius, power, and magic in it.",
                author: "Johann Wolfgang von Goethe"
            }
        ];

        const quoteElement = document.getElementById("quote");
        const authorElement = document.getElementById("quote-author");

        function displayQuote() {
            const randomIndex = Math.floor(Math.random() * quotes.length);
            const randomQuote = quotes[randomIndex];

            quoteElement.textContent = randomQuote.quote;
            authorElement.textContent = `- ${randomQuote.author}`;
        }

        displayQuote();
        setInterval(displayQuote, 10000);
    </script>
</body>
</html>
